TARGET "SysDebug"
	FILE "<bld>/mintia/sysdbg.sys"

	DRIVER_TARGET

	LIBDIR "<sdk>/Rtl/Headers"

	SOURCES "./"

	#IF ( == BLD_BITS 32 )
		LINKOPT "-pabase:0x80100000"
	#ELSE
		#ERROR "Somebody set up appropriate bases for the 64-bit platforms"
	#END

	#IF BLD_CHK
		LINKOPT "-keepglobals"
	#END

	LINKOPT "-nostubs"
END